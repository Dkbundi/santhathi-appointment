<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <%= render :partial => 'shared/head' %>
   <script type="text/javascript">
      jQuery(document).ready(function(){
         jQuery("#datepicker").datepicker({ altField: '#date', altFormat: 'dd MM, yy', onSelect: function(dateText, inst) { jQuery('#spinner').show(); jQuery.ajax({data:'date=' + dateText +'&doctor=' + jQuery('#appointment_doctor_id').val() + '&authenticity_token=' + encodeURIComponent("<%= escape_javascript form_authenticity_token %>"), dataType:'script', success:function(request){jQuery('#spinner').hide();}, type:'get', url:"<%= escape_javascript new_pms_appointment_url %>"}) }
});
      });
   </script>
</head>

<body>
<div class="container" id="container">
   <div  id="header">
     <div id="global_links">
        <%= render :partial => 'shared/global_links' %>
      </div>
     <%= render :partial => 'shared/header' %>
   </div>

   <div id="content" >
     <div id="top_menu" class="clearfix">
        <%= render :partial => 'shared/pms_sub_tabs' %>
     </div>
		
     <div id="content_main" class="clearfix">
       <h2 class="ico_mug"><%= yield :header%> </h2>
       <div id="content_wrapper">
	  
	  <%= render :partial => 'shared/layout_body' %>
       </div>
     </div><!-- end #content_main -->	
    </div><!-- end #content -->
		   
    <div  id="footer" class="clearfix">
       <%= render :partial => 'shared/footer' %>
    </div>
</div><!-- end container -->

</body>
</html>
