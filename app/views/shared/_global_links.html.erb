<% if logged_in? %>
 	<%= link_to "My Account", profile_url(current_user) %> |
	<% if admin? -%>
	  <% unless request.request_uri =~ /admin/%>
	     <%= link_to "Administration", admin_dashboard_index_path %> |
	  <% else -%>	
	     <%= link_to "Go to application", pms_appointments_url %> |  
	  <% end -%> 	  
	<% end -%>
	<%= link_to "Log out", logout_url, :method => :delete %>
<% else %>
	<%= link_to "Sign up", signup_url %> |
	<%= link_to "Log in", login_url %>
<% end %>
