<% if logged_in? %>
 	<strong><%= current_user.login %></strong> |
	<%= link_to "Go to public site", "http://localhost:3000" %> |
	<%= link_to "My Account", profile_url(current_user) %> |
	<% if admin? -%><%= link_to "Administration", pms_appointments_url %> | <% end -%>
	<%= link_to "Log out", logout_url, :method => :delete %>
<% else %>
	<%= link_to "Sign up", signup_url %> |
	<%= link_to "Log in", login_url %>
<% end %>
