<% content_for :left_header do -%>
   New message template
<%end-%>


<% form_for([:admin,@saved_message]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :message_content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %> | <%= link_to 'Cancel', admin_saved_messages_path %>
  </p>
<% end %>


