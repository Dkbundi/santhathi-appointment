
<% content_for :header do -%>
  Listing all Laboratory Test Groups records
<%end-%>
 <div id = 'top-links'>
   <div class = 'right'>
      <%= link_to("<span>New Group</span>", new_admin_masters_laboratory_test_group_path(), :class => 'buttonAdd', :title => 'Create Parameter')  %>
    </div>

    <div class = 'clear'></div>
  </div>

	<div id='parameters_list'>




<table class="listing">
  <tr>
    <th><%= remote_order_by_link(:name,:text => "Group Name") %> </th>
    <th> Add Services </th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @laboratory_test_groups.each do |laboratory_test_group| %>
  <tr>
    <td><%=h laboratory_test_group.name %></td>
    <td><%= link_to "Add Service", admin_masters_laboratory_test_group_laboratory_test_group_services_path(laboratory_test_group.id) %></td>


