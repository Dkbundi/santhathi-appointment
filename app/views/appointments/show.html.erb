<%= stylesheet_link_tag "default" %>
<div class='continer-show'>
  <h3>Showing Appointment</h3><br />	
  <table class="form-table">
    <tr><th><b>Department:</b></th><td><%=h @appointment.doctor.department.dept_name %></td></tr>
    <tr><th><b>Doctor:</b></th><td><%=h @appointment.doctor.name %></td></tr>
    <tr><th><b>Name:</b></th><td><%=h @appointment.patient.patient_name %></td></tr>
    <tr><th><b>Appointment date:</b></th><td><%=h @appointment.appointment_date %></td></tr>
    <tr><th><b>Appointment time:</b></th><td><%=h @appointment.appointment_time.strftime('%H:%M').to_s %></td></tr>
    <tr><th><b>Reg no:</b></th><td><%=h @appointment.patient.reg_no %></td></tr>
    <tr><th><b>Age:</b></th><td><%=h @appointment.patient.age %></td></tr>
    <tr><th><b>Gender:</b></th><td><%=h @appointment.patient.gender %></td></tr>
    <tr><th><b>Contact no:</b></th><td><%=h @appointment.patient.contact_no %></td></tr>
  </table>
 

<%if @appointment.new_app? %>
  <br />
  <% form_tag confirm_appointment_url(@appointment) do -%>
    <table>
      <% if @appointment.patient.reg_no.nil? %>
         <tr><th>Register for:</th>
           <td><%= radio_button_tag ('reg_type', '1', checked = true) %> Individual
               <%= radio_button_tag ('reg_type', '2', checked = false) %> Copule
           </td>
         </tr>
      <% end %> 
      <tr><td>&nbsp;</td> <td> <br /> <%= submit_tag "Visited", :class => 'button'%> </td> </tr>
      <!--<a class="button" href="#" onclick="$(this).up('form').submit(); return false;"><span>Confirm</span></a>-->
    </table>
  <% end %> 
<%end%>

</div>
<script type="text/javascript">
  jQuery(".continer-show").corner("corner 5px") 
</script>

