<%unless @appointments.blank?%>
<%form_tag doctor_patient_path(1), :method => :put do%>
<table class="listing">
      <thead>
      <tr>
        <th></th>
        <th><%= remote_order_by_link ({:patient => :reg_no} , :text => "Hospital No.") %></th>
        <th><%= remote_order_by_link ({:patient => :patient_name} , :text => "Patient Name") %></th>
        <th><%= remote_order_by_link (:id , :text => "PVR No.") %></th>
        <th><%= remote_order_by_link :doctor =>:name %></th>
        <th><%= remote_order_by_link ({:department => :dept_name }, :text => "Department")%></th>
        <th><%= remote_order_by_link ({:reason => :name }, :text => "Reason") %></th>
        <th>History</th>
        <th>Clinical Screen</th>
        <th>Vitalsigns</th>
      </tr>

    <%for appointment in @appointments %>
     <tr>
         <td  id = <%=row_class(appointment.state) %>><%= check_box_tag("appointment[]", appointment.id, false,:id=>appointment.id)%></td>
         <td><%=h appointment.patient.reg_no %></td>
         <td><%=h appointment.patient.patient_name%></td>
         <td><%=h appointment.id%></td>
         <td><%=h appointment.doctor.name %></td>
         <td><%=h appointment.doctor.department.dept_name%></td>
         <td><%=h appointment.reason.name%></td>
         <td><%= link_to 'Appointments', patient_patient_appointments_url(appointment.patient), :rel=> "facebox" %></td>
         <td><%= link_to 'Clinical screen', new_appointment_clinical_screen_path(appointment)%></td>
         <td><%= link_to 'Vitalsigns', new_vital_sign_url(:patient_id => appointment.patient.id) , :rel=> "facebox"%></td>
       </tr>
     <%end%>

    <tr class="table-footer">
      <td colspan=3><%=submit_tag "Recommended For Discharge" %></td>
       <td colspan = 2>  Per page: <%= remote_per_page_select %></td>
        <td colspan = 2> Go to page:
                                  <% form_tag(doctor_patients_url, :method => :get, :id => "goto") do %>
                                        <% fields_for @search do |f|%>
                                          <%= f.text_field :page, :class => 'textbox-tiny' %>


                                       <%end -%>
                                     <%end-%>


        </td>
       <td colspan=5> <% if @appointments.size > 1 %>
                          <div class="pagination">
                                <%= remote_page_links %>
                          </div>
                          <%end%>
                          </td>
     </tr>


    </table>
    <%= observe_form("goto", :frequency => 1,
                 :before => "Element.show('spinner')",
                 :success => "Element.hide('spinner')",
                 :url => doctor_patients_url, :method => :get) %>
   <br/>
  <%end%>
 <%end%>
