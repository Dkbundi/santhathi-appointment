<div class='continer'>
<h2>New department</h2>
<% form_for :department,:url => departments_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :dept_name %><br />
    <%= f.text_field :dept_name, {:class => 'textbox'} %>
  </p>
  <p>
    <%= f.label :abbrevation %><br />
    <%= f.text_field :abbrevation, {:class => 'textbox'} %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description, {:class => 'textbox'} %>
  </p>
  <p>
    <%= f.label :system_defined %><br />
    <%= f.text_field :system_defined, {:class => 'textbox'} %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', departments_path %>
</div>
