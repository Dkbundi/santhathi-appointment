<div class='continer'>
<h3>Listing patients</h3>

<table class="listing">
  <tr>
    <th>Reg. date</th>
    <th>Reg. no </th>
    <th>Name</th>
    <th>Age</th>
    <th>Dob</th>
    <th>Spouse name</th>
    <th>Address</th>
    <th>Contact no</th>
    <th>Show| Edit| Delete</th>
  </tr>

<% for patient in @patients %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h patient.reg_date %></td>
    <td><%=h patient.reg_no %></td>
    <td><%=h patient.patient_name %></td>
    <td><%=h patient.age %></td>
    <td><%=h patient.dob %></td>
    <td><%=h patient.spouse_name %></td>
    <td><%=h patient.address %></td>
    <td><%=h patient.contact_no %></td>
    <td>&nbsp;&nbsp; <%= link_to image_tag('show.png', {:title => 'Show', :border => 0}), patient_url(patient), :rel=> "facebox" %> &nbsp;&nbsp;| &nbsp;&nbsp; <%= link_to image_tag('edit.png', {:title => 'Edit', :border => 0}), edit_patient_path(patient) %> &nbsp;&nbsp;|&nbsp;&nbsp; <%= link_to image_tag('delete.png', {:title => 'delete', :border => 0}), patient_path(patient), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New patient', new_patient_path %>
</div>
