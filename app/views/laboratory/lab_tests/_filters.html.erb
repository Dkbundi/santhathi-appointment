<% form_tag(laboratory_lab_tests_url, :method => :get, :id => "search_form") do %>
   <table>
     <tr>
       <th  style = "vertical-align: middle;">Search laboratory test:</th>
      <td  style = "vertical-align: middle;">
      <%fields_for @search do |f|%>
         <% f.fields_for @search.conditions do |p| %>
            <%= p.text_field :name_like ,:class =>'textbox' %>
         <%end%>
      <%end%>
      </td>
    </tr>
  </table>
<% end %>

<%= observe_form("search_form", :frequency => 1,
                 :before => "Element.show('spinner')",
                 :success => "Element.hide('spinner')",
                 :url => laboratory_lab_tests_url, :method => :get) %>

<%= image_tag("spinner.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "spinner",
              :style =>"display: none;" ) %>
