<% content_for :sidebar do -%>
  <div class="search1">
    <p> <%= remote_per_page_select -%>   </p>
    <% form_remote_tag(:url => laboratory_samples_url, :method => :get) do %>
      <%fields_for @search do |f|%>
        <% f.fields_for @search.conditions do |p| %>
          <p> <label> Sample Name: </label> <%= p.text_field :sample_name_like, :class => 'textbox-small' %> </p>
          <p> <label> Used In: </label>  <%= p.text_field :used_in_diagnosis_of_like, :class => 'textbox' %> </p>
         <%end%>
      <%end%>
      <input type="reset" value="Reset"> &nbsp; &nbsp;  <%= submit_tag "Search" %> 
    <% end %>
  </div> 
<%end%>
