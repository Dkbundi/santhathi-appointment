<% form_tag(cms_services_url, :method => :get, :id => "search_form") do %>
   <table class="search-table">
     <tr><th>Service Name :</th>

      <%fields_for @search do |f|%>
         <% f.fields_for @search.conditions do |p| %>
            <th> <%= p.text_field :name_like ,:class =>'textbox' %></th>
         <%end%>
      <%end%>
	 </tr>
  </table>
<% end %>

<%= observe_form("search_form", :frequency => 1,
                 :before => "jQuery('#spinner').show()",
                 :success => "jQuery('#spinner').hide()",
                 :url => cms_services_url, :method => :get) %>

<%= image_tag("spinner.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "spinner",
              :style =>"display: none;" ) %>
