<% content_for :header do -%>
    Registration summary   <%= link_to "Back", :back %>
<% end -%>

<% form_tag :action => 'create', :p => @patient.id do %>
  <table cellpadding="5px" class="form-table">
    <% for registration_summary1 in @registration_summaries%>
      <tr>
	<th>
	  <%= label_tag("#{registration_summary1.name}")%>
	</th>
	<td>
          <%= text_area_tag("vital_signs[#{registration_summary1.id}]", "", :class=>"summary" )%>
        </td>
      </tr>
    <% end %>
   </table><br />
   <%= submit_tag "save" %> -or- <%= link_to 'Cancel', :back %>

<%end%>

