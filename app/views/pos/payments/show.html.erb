<div>
  <p><%= link_to_function 'Print this bill', "top.print();" -%></p>
  <p>
  Status: <%= @payment.state.humanize -%>
  <% if @payment.state == 'pending' -%>
    <%= link_to 'Recieve Payment', recieve_payment_pos_payment_path(@payment), :method => :post -%>
    <%= link_to 'Cancel this bill', cancel_payment_pos_payment_path(@payment), :method => :post -%>
  <% end -%>
  </p>
</div>
<div>
    <table style='width:100%;height:100%;border:1px solid black;' cellspacing='0' cellpadding='0'>
      <tr>
        <th style='border:1px solid black;text-align:center;'>Particulars</th>
        <th style='border:1px solid black;text-align:center;'>Quantity</th>
        <th style='border:1px solid black;text-align:center;'>Amount</th>
        <th style='border:1px solid black;text-align:center;'>Total Amount</th>        
      </tr>
           <% @payment.payment_items.each do |item| -%>
             <tr>
               <td><%= item.payable.name -%></td>
               <td><%= item.quantity -%></td>
               <td><%= item.amount -%></td>
               <td><%= item.total_amount -%></td>               
             </tr>
           <% end -%>
    </table>
</div>
