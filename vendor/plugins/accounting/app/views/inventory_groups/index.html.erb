<div>
  <div style='text-align:right;'>
    <%= button_to 'Add a new inventory group', new_inventory_group_path, :method => :get %>
  </div>
  <div>
    <table style='width:100%;'>
      <% @inventory_groups.each do |inventory_group| %>
        <tr>
          <td>
            <span style='font-size:18px;'><%=h inventory_group.name %></span>
          </td>
          <td><%= link_to 'Edit', edit_inventory_group_path(inventory_group) %></td>
        </tr>
        <tr>
          <td colspan='3'><hr /></td>
        </tr>
      <% end %>      
    </table>
  </div>
</div>
