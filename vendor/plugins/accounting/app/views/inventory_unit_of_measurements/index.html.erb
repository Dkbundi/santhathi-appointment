<div>
  <div style='text-align:right;'>
    <%= button_to 'Add a new unit of measurement', new_inventory_unit_of_measurement_path, :method => :get %>
  </div>
  <div>
	<table style='width:100%;'>	  
	<% @inventory_unit_of_measurements.each do |inventory_unit_of_measurements| %>
	  <tr>
	    <td>
              <span style='font-size:18px;'>
                <%=h inventory_unit_of_measurements.unit_name %>
                = 
                <%=h inventory_unit_of_measurements.unit_value %>
                <%=h inventory_unit_of_measurements.sub_unit_name %>
              </span>
            </td>	   
	    <td><%= link_to 'Edit', edit_inventory_unit_of_measurement_path(inventory_unit_of_measurements) %></td>
	  </tr>
          <tr>
            <td colspan='3'><hr /></td>
          </tr>
	<% end %>
	</table>
  </div>
</div>
