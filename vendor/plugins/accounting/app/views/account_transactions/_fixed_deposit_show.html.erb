<% fixed_deposit = @account_transaction.account_transactionable -%>
<h2>Fixed Deposit transaction</h2>
<p>
  <b>Fixed Deposit certificate no. </b><br />
  <%= link_to fixed_deposit.fd_certificate_number, member_fixed_deposit_path(fixed_deposit.member,fixed_deposit) -%>
</p>
<p>
  <b>Transaction date </b> <br />
  <%= @account_transaction.transaction_date -%>
</p>
<p>
  <b>Transaction on </b> <br />
  <%= @account_transaction.account_transactionable_on -%>
</p>
<p>
  <b>Accounts effected </b><br />
    <div style='border:1px solid black;'>
      <table style='width:100%;hxeight:100%;bxorder:1px solid black;' cellspacing='0' cellpadding='6'>
        <tr>
          <th style='border:1px solid black;'>Accounts</th>
          <th style='border:1px solid black;'>Amount</th>
          <th style='border:1px solid black;'></th>
        </tr>
        <% @account_transaction.account_transaction_items.each do |item| %>
          <tr>
            <td><%= item.account.name %></td>
            <td><%= number_to_currency(item.amount, :unit => 'Rs.') %></td>
            <td><%= item.category -%></td>
          </tr>
        <% end %>
      </table>
    </div>
</p>
