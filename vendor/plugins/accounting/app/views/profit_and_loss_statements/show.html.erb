<% total_profit = 0 -%>
<% total_loss = 0 -%>
<div>
  <div><span style='font-weight:bold;font-size:20px;'>Profit and Loss statement</span> <br /><br /></div>
  <div class='left'>
    <span style='font-weight:bold;font-size:18px;'> Expense </span> 
    <% expense_acc_hash = {} -%>
    <% @expenses.each do |expense| %>      
       <% unless expense_acc_hash[expense.account_group_id] == 1 -%>
         <br /><br /><span style='font-weight:bold;font-size:15px;'><%= expense.account_group.name %></span>
       <% end -%>
         <br />
         <%= expense.name %>
         <%= number_to_currency(expense.amount, :unit => 'Rs.') %> 
         <% total_loss += expense.amount.to_f -%>
      <% expense_acc_hash[expense.account_group.id] = 1 -%>
    <% end %>
    <br />
    -----------------------------------------<br />
    Total <%= number_to_currency(total_loss, :unit => 'Rs.') -%> 
  </div>
  <div class='right'>
    <span style='font-weight:bold;font-size:18px;'> Income </span> 
    <% income_acc_hash = {} -%>
    <% @incomes.each do |income| %>
      <% unless income_acc_hash[income.account_group_id] == 1 -%>
        <br /><br /><span style='font-weight:bold;font-size:15px;'><%= income.account_group.name %></span>
      <% end -%>
         <br />
         <%= income.name %>
         <%= number_to_currency(income.amount, :unit => 'Rs.') %>
         <% total_profit += income.amount.to_f -%>      
      <% income_acc_hash[income.account_group.id] = 1  -%>
    <% end %>
    <br />
    -----------------------------------------<br />
    Total <%= number_to_currency(total_profit, :unit => 'Rs.') -%>
  </div>
</div>
