<% total_profit = 0 -%>
<% total_loss = 0 -%>
<div>
  <div class='left'>
    <h2>Expense</h2> 
    <% expense_acc_hash = {} -%>
    <% @expenses.each do |expense| %>      
       <% unless expense_acc_hash[expense.account_group_id] == 1 -%>
         <div style='margin-left:15px;'><h3><%= expense.account_group.name %></h3> </div>
       <% end -%>
       <div style='margin-left:30px;'>
         <%= expense.name %>
         <%= number_to_currency(expense.amount, :unit => 'Rs.') %> <br /> <br />
         <% total_loss += expense.amount.to_f -%>
       </div>
      <% expense_acc_hash[expense.account_group.id] = 1 -%>
    <% end %>
    <div style='margin-left:15px;'>
        -----------------------------------------<br />
        <h3>Total <%= number_to_currency(total_loss, :unit => 'Rs.') -%></h3>
    </div>    
  </div>
  <div class='right'>
    <h2>Income</h2> 
    <% income_acc_hash = {} -%>
    <% @incomes.each do |income| %>
      <% unless income_acc_hash[income.account_group_id] == 1 -%>
        <div style='margin-left:15px;'><h3><%= income.account_group.name %></h3> </div>
      <% end -%>
       <div style='margin-left:30px;'>
         <%= income.name %>
         <%= number_to_currency(income.amount, :unit => 'Rs.') %> <br /> <br />
         <% total_profit += income.amount.to_f -%>
      </div>      
      <% income_acc_hash[income.account_group.id] = 1  -%>
    <% end %>
    <div style='margin-left:15px;'>
      -----------------------------------------<br />
      <h3>Total <%= number_to_currency(total_profit, :unit => 'Rs.') -%></h3>
    </div> 
  </div>
</div>
