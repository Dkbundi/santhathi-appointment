<h3>Trial Balance</h3>
<% debit_sum = credit_sum = 0 -%>
<table style='width:100%;' cellspacing='2' cellpadding='2'>
  <tr>
    <th class='account_heading'>Account</th>
    <th class='account_heading'>Debit(Rs.)</th>
    <th class='account_heading'>Credit(Rs.)</th>
  </tr>
  <% @trial_balance_array.each do |trial_balance| %>
    <tr>
      <td><%= link_to trial_balance['account_name'], ledger_path(trial_balance['account_id']), :style => 'color:black;' %></td>
      <td class='amount'>
        <% if trial_balance['type'] == 'Debit' -%>
          <%= number_to_currency(trial_balance['amount'], :unit => '')  %>
          <% debit_sum += trial_balance['amount'] -%>
        <% end -%>
      </td>
      <td class='amount'>
        <%  if trial_balance['type'] == 'Credit' -%>
          <%= number_to_currency(trial_balance['amount'], :unit => '') %>
          <% credit_sum += trial_balance['amount'] -%>
        <% end -%>
      </td>            
    </tr>
  <% end %>
  <tr>
    <td><b>Total</b></td>
    <td class='amount'><b><%= number_to_currency(debit_sum, :unit => 'Rs.') -%></b></td>
    <td class='amount'><b><%= number_to_currency(credit_sum, :unit => 'Rs.') -%></b></td>
  </tr>
</table>
