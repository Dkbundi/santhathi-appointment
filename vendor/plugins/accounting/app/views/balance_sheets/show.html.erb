<div>
  <div><span style='font-weight:bold;font-size:20px;'>Balance sheet for the year <%= @current_accounting_period.name %></span> <br /><br /></div>
  <div class='left'>
    <span style='font-weight:bold;font-size:18px;'> Liabilities </span> 
    <% liability_acc_hash = {} -%>
    <% @liabilities.each do |liability| %>
      <% unless liability_acc_hash[liability.account_group_id] == 1 -%>
        <br /><br /><span style='font-weight:bold;font-size:15px;'><%= liability.account_group.name %> </span>
      <% end -%>
         <br />
         <%= liability.name %>
         <%= number_to_currency(liability.amount, :unit => 'Rs.') %>     
      <% liability_acc_hash[liability.account_group.id] = 1  -%>
    <% end %>
  </div>
  <div class='right'>
    <span style='font-weight:bold;font-size:18px;'> Assets </span> 	
    <% asset_acc_hash = {} -%>
    <% @assets.each do |asset| %>      
       <% unless asset_acc_hash[asset.account_group_id] == 1 -%>
         <br /><br /><span style='font-weight:bold;font-size:15px;'><%= asset.account_group.name %></span>
       <% end -%>
         <br />
         <%= asset.name %>
         <%= number_to_currency(asset.amount, :unit => 'Rs.') %> 
      <% asset_acc_hash[asset.account_group.id] = 1 -%>
    <% end %>
  </div>
  <div class='clear'></div>
</div>
